<!-- Featured Section Begin -->
<section class="featured" style="margin-top: 75px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Rau tươi Organic</h2>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            <div class="categories__slider owl-carousel">
                @foreach (var item in Model)
                {
                    if (@item.MaLoai == 1)
                    {
    <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
        <div class="featured__item">
            <div class="featured__item__pic set-bg" data-setbg="@item.Hinh">
                <ul class="featured__item__pic__hover">
                    <li>
                        <a href="@Url.Action("ThemGioHang", "GioHang", new { @iIdSanPham = item.MaSP, @strURL = Request.Url.ToString() })"><i class="fa fa-shopping-cart"></i></a>
                    </li>
                </ul>
            </div>
            <div class="featured__item__text">
                <h6><a href="@Url.Action("Details", "SanPhams", new { @id = item.MaSP })">@item.Ten</a></h6>
                <h5>@String.Format("{0:0,0}", @item.Gia)</h5>
            </div>
        </div>
    </div>}
}
            </div>
        </div>
    </div>
</section>
