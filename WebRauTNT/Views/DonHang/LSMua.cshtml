@model WebRauTNT.Models.DMViewModel
@{
    ViewBag.Title = "LSMua";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using WebRauTNT.Models.LinQ;
    @{ AspNetUser kh = (AspNetUser)Session["TaiKhoan"]; }
<section class="breadcrumb-section set-bg" data-setbg="/Content/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Đơn hàng đã mua</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
@*<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">*@
<div class="col-lg-12">
    @if (Model.donHang.Count() != 0)
    {
        <h2 style="text-align: center; margin-bottom: 30px; margin-top: 20px; color: forestgreen">Đơn hàng đã mua</h2>

        <table class="table table-bordered table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>
                        Đơn hàng
                    </th>
                    <th>
                        Ngày đặt
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Người nhận
                    </th>
                    <th>
                        Số điện thoại
                    </th>
                    <th>
                        Địa chỉ giao
                    </th>
                    <th>
                        Tổng tiền
                    </th>

                    <th>
                        Trạng thái giao hàng
                    </th>

                </tr>
            </thead>
            <tbody class="table-bordered">
                @foreach (var item in Model.donHang)
                {
                <tr>
                    <th>
                        @item.MaDH
                    </th>
                    <th>@item.NgayDat</th>
                    <th>@item.AspNetUser.Email</th>
                    <th>@item.NguoiNhan</th>
                    <th>@item.SDTNguoiNhan</th>
                    <th>@item.DiaChiGiaoHang</th>

                    <th>@item.TongTien</th>
                    <th>
                        @if (@item.TrangThaiGiaoHang == true)
                        {<a>Đã giao</a> }
                        else
                        { <a>Chưa giao</a>}
                    </th>

                </tr>
                }
            </tbody>


        </table>
    }
    else
    {
        <br />
        <h2 style="color:green; text-align:center"> ĐƠN HÀNG ĐANG TRỐNG</h2><br />
        <h3 style=" text-align:center">Hãy đặt hàng ngay</h3>
    }

</div>

<section class="shoping-cart spad">
    <div class="col-lg-12" style="text-align:center">

        <a href="@Url.Action("Index", "Home")" class="primary-btn cart-btn">TIẾP TỤC MUA HÀNG</a>


    </div>
</section>
